@model QualitySouvenirs.Models.Extended.EditSouvenir

@{
    ViewData["Title"] = "Edit";
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-9 padding-right">
            <h2>Edit</h2>

            <h4>Souvenir</h4>
            <hr />
            <form asp-action="Edit" asp-controller="Souvenirs" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SouvenirID" />
                <div class="form-group">
                    <label asp-for="SouName" class="control-label"></label>
                    <input asp-for="SouName" class="form-control" />
                    <span asp-validation-for="SouName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SouPrice" class="control-label"></label>
                    <input asp-for="SouPrice" class="form-control" />
                    <span asp-validation-for="SouPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SouDescription" class="control-label"></label>
                    <input asp-for="SouDescription" class="form-control" />
                    <span asp-validation-for="SouDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="image" class="control-label"></label>
                    <input asp-for="image" type="file" name="Image" id="Imageinput" />
                    <img src="data:image;base64,@System.Convert.ToBase64String(Model.sImage)" width="150" height="150" />
                    <span asp-validation-for="image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SouQuantity" class="control-label"></label>
                    <input asp-for="SouQuantity" class="form-control" />
                    <span asp-validation-for="SouQuantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SupplierID" class="control-label"></label>
                    <select asp-for="SupplierID" class="form-control" asp-items="ViewBag.SupplierID"></select>Current: @Model.SupplierID
                    <span asp-validation-for="SupplierID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryID" class="control-label"></label>
                    <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>Current: @Model.CategoryID
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
