@model QualitySouvenirs.Models.Extended.PSouvenir

@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <div class="row">
        <div class="col-sm-9 padding-right">
            <h2>Create</h2>

            <h4>Souvenir</h4>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
            <hr />
            <form asp-action="Create" asp-controller="Souvenirs" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SouName" class="control-label"></label>
                    <input asp-for="SouName" class="form-control" />
                    <span asp-validation-for="SouName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SouPrice" class="control-label"></label>
                    <input asp-for="SouPrice" class="form-control" />
                    <span asp-validation-for="SouPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SouDescription" class="control-label"></label>
                    <input asp-for="SouDescription" class="form-control" />
                    <span asp-validation-for="SouDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="image" class="control-label"></label>
                    <input asp-for="image" type="file" name="Image" id="Imageinput" />

                    <span asp-validation-for="image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SouQuantity" class="control-label"></label>
                    <input asp-for="SouQuantity" class="form-control" />

                    <span asp-validation-for="SouQuantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SupplierID" class="control-label"></label>
                    <select asp-for="SupplierID" class="form-control" asp-items="ViewBag.SupplierID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryID" class="control-label"></label>
                    <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
 </div>

    

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
