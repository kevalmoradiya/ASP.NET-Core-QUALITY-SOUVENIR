@model QualitySouvenirs.Models.UserLogin

@{
    ViewData["Title"] = "Login";
}


<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="login-form">
                <!--login form-->
                <h2>Login to your account</h2>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UseEmail" class="control-label"></label>
                        <input asp-for="UseEmail" class="form-control" />
                        <span asp-validation-for="UseEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsePassword" class="control-label"></label>
                        <input asp-for="UsePassword" class="form-control" />
                        <span asp-validation-for="UsePassword" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group">
                        <button type="submit" value="Login" class="btn btn-default">Login</button>
                    </div>
                </form>
            </div>

        </div>
        <div class="col-sm-1">
            <h2 class="or"> @Html.ActionLink("Registration", "Registration", "Login", null, new { Style = "color:White;" })</h2>

        </div>
       
    </div>
</div>
@section Scripts
    {
   
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
}




